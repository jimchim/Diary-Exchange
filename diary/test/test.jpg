def validateImage(image):
	acceptedPILFormat = ['JPEG','PNG','BMP','GIF']
	try:
		img = Image.open(image)
	except IOError:
		#print image, "is a bad Image"
		return False,image
	else:
		if img.format in acceptedPILFormat:
			#print image, 'is a good image'
			return True,img
	



